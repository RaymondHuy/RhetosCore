{
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  },

  "ServerConnectionString": {
    "Value": "Data Source=<ServerName>;Initial Catalog=<DatabaseName>;Integrated Security=SSPI;",
    "Provider": "Rhetos.MsSql"
  },

  "AppSettings": {
    "AssemblyGenerator.ErrorReportLimit": 5,
    "EntityFramework.UseDatabaseNullSemantics": "false",
    "DataMigration.SkipScriptsWithWrongOrder": "false",
    "Security.LookupClientHostname": "false",
    "AuthorizationAddUnregisteredPrincipals": "false",
    "BuiltinAdminOverride": "true"
  },

  "RhetosAspNetFormsAuth": {
    "RunAdminAccountMigration": true,
    "AdminPassword": "test.123",

    "MaxFailedAccessAttempts": 1000,
    
    //Username & email configuration
    "RequiredUniqueChars": 1,
    "RequireConfirmedEmail": false,

    // Password configuration
    "RequireUniqueEmail": false,
    "RequireUppercase": false,
    "RequireNonAlphanumeric": false,
    "RequireLowercase": false,
    "RequiredLength": 4,
    "RequireDigit": false
  }
}
